{
  "name": "cerbe-npm-vuln-checker",
  "displayName": "Cerbe: NPM Vulnerability Checker",
  "description": "Scans for vulnerable npm dependencies using OSV.dev (direct + transitive, lockfile-aware).",
  "version": "1.0.1",
  "publisher": "RenownedOyster",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Programming Languages"],
  "repository": {
    "type": "git",
    "url": "https://github.com/RenownedOyster/cerbe-npm-vuln-checker"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "onCommand:cerbe.scanDependencies",
    "workspaceContains:package.json",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "cerbeVulnerabilities",
          "name": "Cerbe Vulnerabilities"
        }
      ]
    },
    "commands": [
      {
        "command": "cerbe.scanDependencies",
        "title": "Cerbe NPM Vulnerability checker: Scan package.json"
      }
    ],
    "configuration": {
      "title": "Cerbe",
      "properties": {
        "cerbe.autoScan": {
          "type": "string",
          "enum": ["all", "onSave", "manual"],
          "default": "all",
          "description": "When Cerbe should automatically scan for vulnerabilities."
        },
        "cerbe.scanTransitive": {
          "type": "boolean",
          "default": true,
          "description": "Scan transitive dependencies via lockfiles."
        },
        "cerbe.maxConcurrency": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "description": "Maximum number of parallel OSV queries."
        },
        "cerbe.includeDevDependencies": {
          "type": "boolean",
          "default": true,
          "description": "Include devDependencies in vulnerability scans."
        },
        "cerbe.excludeGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Additional glob patterns to exclude from scanning (node_modules is always excluded)."
        }
      }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"(no lint configured)\"",
    "test": "echo \"(no tests configured)\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
